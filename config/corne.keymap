#define HM_J hm LSHIFT J
#define HM_K hm LGUI K
#define HM_L hm LALT L
#define HM_SEMI hm LCTRL SEMI

#define BASE   0
#define SYM    1
#define NAV    2
#define NUM    3
#define MEDIA  4
